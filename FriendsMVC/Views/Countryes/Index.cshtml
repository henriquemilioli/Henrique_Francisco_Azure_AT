@model IEnumerable<FriendsMVC.Models.Countryes>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CountryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CountryPhoto)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CountryName)
            </td>
            <td>
               <img src =" @Html.DisplayFor(modelItem => item.CountryPhoto)" width=100 height=100 />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdCountry">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdCountry">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdCountry">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
